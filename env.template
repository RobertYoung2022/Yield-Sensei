# YieldSensei Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# SECURITY - CRITICAL: These must be set with strong, unique values
# =============================================================================

# JWT Secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters

# Encryption Key for message bus (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-super-secure-encryption-key-here-minimum-32-characters

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=yieldsensei
POSTGRES_USER=yieldsensei_app
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_SSL=true
POSTGRES_MAX_CONNECTIONS=20

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=yieldsensei
CLICKHOUSE_USER=yieldsensei
CLICKHOUSE_PASSWORD=your-secure-clickhouse-password-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DB=0

# Vector Database Configuration
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=6333
VECTOR_DB_API_KEY=your-secure-vector-db-api-key-here

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================

KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=yieldsensei-app
KAFKA_GROUP_ID=yieldsensei-group

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Settings
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Performance Settings
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=30000
HEARTBEAT_INTERVAL=30000

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Prometheus Metrics
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Perplexity AI (for research capabilities)
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# OpenAI (for AI capabilities)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Generate strong secrets using: openssl rand -hex 32
# 2. Use different secrets for each environment (dev, staging, prod)
# 3. Rotate secrets regularly (every 90 days)
# 4. Never use default values in production
# 5. Store secrets in a secure vault (AWS Secrets Manager, HashiCorp Vault, etc.)
# 6. Use environment-specific .env files (.env.dev, .env.prod)
# 7. Enable SSL/TLS for all database connections in production
# 8. Use strong passwords (minimum 16 characters, mixed case, numbers, symbols) 