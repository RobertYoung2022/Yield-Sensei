#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ”’ Starting pre-commit type safety validation..."

# Run comprehensive pre-commit type checking
echo "ğŸ” Running TypeScript pre-commit validation..."
tsx scripts/pre-commit-typecheck.ts

# Quick type check for basic compilation
echo "ğŸš€ Quick TypeScript compilation check..."
npm run typecheck || {
  echo "âŒ TypeScript compilation failed. Please fix errors before committing."
  exit 1
}

# Check for new 'any' types in staged files
echo "ğŸ” Checking for new 'any' types..."
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' || true)
if [ -n "$STAGED_TS_FILES" ]; then
  NEW_ANY_COUNT=$(git diff --cached | grep -c '^+.*: any\|^+.*= any\|^+.*<any>' || echo "0")
  if [ "$NEW_ANY_COUNT" -gt "0" ]; then
    echo "âš ï¸  Found $NEW_ANY_COUNT new 'any' type(s) in staged files."
    echo "   Consider using specific types instead of 'any' for better type safety."
    echo "   Use our type utilities from src/utils/ for safer alternatives."
  fi
fi

# Run lint-staged for formatting and additional checks
echo "ğŸ§¹ Running lint-staged for code quality..."
npx lint-staged

echo "âœ… Pre-commit validation completed successfully!"
