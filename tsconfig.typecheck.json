{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": false,
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 0
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "docs"
  ]
}