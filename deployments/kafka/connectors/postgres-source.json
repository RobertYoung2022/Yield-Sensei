{
  "name": "yieldsensei-postgres-source",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "plugin.name": "pgoutput",
    "database.hostname": "postgres",
    "database.port": "5432",
    "database.user": "yieldsensei_app",
    "database.password": "changeme_in_production",
    "database.dbname": "yieldsensei",
    "database.server.name": "yieldsensei-postgres",
    "table.include.list": "public.users,public.portfolios,public.transactions,public.protocols,public.tokens,public.liquidity_pools,public.yield_strategies,public.risk_assessments",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "http://schema-registry:8081",
    "transforms": "route",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": "yieldsensei-postgres.public.(.*)",
    "transforms.route.replacement": "defi.$1",
    "snapshot.mode": "initial",
    "publication.autocreate.mode": "filtered",
    "slot.name": "yieldsensei_slot",
    "max.batch.size": 2048,
    "max.queue.size": 8192,
    "poll.interval.ms": 1000,
    "schema.history.internal.kafka.topic": "schema-changes.yieldsensei-postgres",
    "schema.history.internal.kafka.bootstrap.servers": "kafka-broker-1:29092,kafka-broker-2:29093,kafka-broker-3:29094",
    "topic.creation.enable": "true",
    "topic.creation.default.replication.factor": 3,
    "topic.creation.default.partitions": 12,
    "topic.creation.default.cleanup.policy": "compact",
    "heartbeat.interval.ms": 10000,
    "heartbeat.topics.prefix": "__debezium-heartbeat",
    "skipped.operations": "none",
    "tombstones.on.delete": "true",
    "include.schema.changes": "true"
  }
} 